/* admin/index/index.wxss */
.content {
  background-color: transparent;
}

.main-header {
  padding: 30rpx;
  color: #fff;
  text-align: center;
  position: relative;
}

.main-header .title {
  font-size: 30rpx;
}

.main-header .total {
  font-size: 52rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 40rpx;
}

.main-header .change-password-btn {
  position: absolute;
  height: 46rpx;
  line-height: 46rpx;
  right: 0;
  top: 70rpx;
  background: linear-gradient(to right, #36eae8 , #1ba2e8);
  font-size: 24rpx;
  padding-left: 30rpx;
  padding-right: 54rpx;
  border-top-left-radius: 46rpx;
  border-bottom-left-radius: 46rpx;
}

.main-header .change-password-btn image {
  width: 12rpx;
  height: 21rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  right: 18rpx;
}

.income-summry {
  background-color: #fff;
  margin: 0 25rpx;
  height: 184rpx;
  display: flex;
  border-radius: 15rpx;
}

.income-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
  position: relative;
  padding-top: 66rpx;
}

.income-item::before {
  content: '';
  display: block;
  width: 18rpx;
  height: 18rpx;
  border: 4rpx solid #29c8e8;
  border-radius: 100%;
  position: absolute;
  left: 0;
  right: 0;
  top: 40rpx;
  margin: auto;
}

.income-item text {
  margin-top: 16rpx;
  font-size: 24rpx;
}

.income-item .income-num {
  color: #a7a7a7;
}

.operate {
  background-color: #fff;
  margin: 12rpx 25rpx 0 25rpx;
  height: 100rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
}

.operate .icon{
  width: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.operate .name {
  flex: 1;
  font-size: 28rpx;
}

.operate .arrow {
  width: 17rpx;
  height: 31rpx;
  margin-right: 36rpx;
}