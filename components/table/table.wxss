/* components/table/table.wxss */
.table-wrap {
  font-size: 28rpx;
  color: #5a5a5a;
}

.table-header {
  display: flex;
  line-height: 90rpx;
  color: #333;
  border-bottom: 2px solid #e1e1e1;
}

.table-header view {
  flex: 1;
  text-align: center;
}

.table-body {
 padding: 10rpx 0;
 line-height: 90rpx;
}

.no-data {
  text-align: center;
}

.table-body .table-row {
  display: flex;
}

.table-body .table-row view {
  flex: 1;
  text-align: center;
}