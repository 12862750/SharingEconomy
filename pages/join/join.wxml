<full-page title="我要加盟">
  <view class="full-container{{isIPX ?  ' ipx' : ''}}">
    <view class="content">
      <form bindsubmit="onSubmit">
        <form-item id="city" name="city" label="城市：" placeholder="请输入城市" />
        <form-item id="userName" name="userName" label="联系人：" placeholder="请输入联系人" />
        <form-item id="mobileno" name="mobileno" type="number" label="联系电话：" placeholder="请输入联系电话" />
        <form-item id="remarks" name="remarks" type="textarea" label="备注：" placeholder="20字以内" />
        <button class="confirm-btn" form-type="submit">提交</button>
      </form>
    </view>
  </view>
</full-page>